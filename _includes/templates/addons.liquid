<div class="addons-wrap d-flex flex-column overflow-y-auto">
    <div class="status d-flex flex-justify-between p-2">
        <div class="title p-1">
            <i class="fa fa-book"></i> TurtleBot 4 User Manual
        </div>
        <div class="branch p-1">
            <span class="name">
                v0.1.0
            </span>
            <i class="fa fa-caret-down"></i>
        </div>
    </div>
    <div class="addons d-flex flex-column height-full p-2 d-none">
        <dl>
            <dt>{{ __.github | default: "GitHub" }}</dt>
            <dd>
                <a href="{{ docs.repository_url }}" title="{{ __.stars | default: 'Stars' }}: {{ rest.stargazers_count }}">
                    <i class="fa fa-github"></i>
                    {{ __.homepage | default: "Source" }}
                </a>
            </dd>
            <dd>
                <a href="{{ docs.repository_url }}/issues" title="{{ __.open_issues | default: 'Open issues' }}: {{ rest.open_issues }}">
                    <i class="fa fa-question-circle-o"></i>
                    {{ __.issues | default: "Issues" }}
                </a>
            </dd>
            <dd>
                <a href="{{ docs.zip_url }}" title="{{ __.size | default: 'Size' }}: {{ rest.size }} Kb">
                    <i class="fa fa-download"></i>
                    {{ __.download | default: "Download" }}
                </a>
            </dd>
        </dl>
        <dl>
            <dt>{{ __.github | default: "Stay Connected" }}</dt>
            <dd>
                <a href="https://www.youtube.com/c/Clearpath" title="Clearpath Robotics Youtube">
                    <i class="fa fa-play"></i>
                </a>
            </dd>
            <dd>
                <a href="https://www.facebook.com/ClearpathInc/" title="Clearpath Robotics Facebook">
                    <i class="fa fa-facebook"></i>
                </a>
            </dd>
            <dd>
                <a href="https://ca.linkedin.com/company/clearpathinc" title="Clearpath Robotics Linkedin">
                    <i class="fa fa-linkedin"></i>
                </a>
            </dd>
            <dd>
                <a href="https://twitter.com/clearpathrobots" title="Clearpath Robotics Twitter">
                    <i class="fa fa-twitter"></i>
                </a>
            </dd>
        </dl>
    </div>
</div>